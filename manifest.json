{
    "manifest_version": 3,
    "name": "YT Music Styler",
    "description": "Injects custom CSS into YT Music to make it look better",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://music.youtube.com/*"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "https://music.youtube.com/*"
    ]
}